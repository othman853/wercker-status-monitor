<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Wercker Build Monitor</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
  </head>

  <body>

    <section id="builds">
      <section v-for="run in runs">
          <commit-info v-bind:commit="run.commit"></commit-info>
      </section>
    </section>

    <script
      src="https://code.jquery.com/jquery-3.1.1.min.js"
      integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
      crossorigin="anonymous"></script>
    <script src="https://vuejs.org/js/vue.min.js" charset="utf-8"></script>

    <script src="/js/socket-client.js"></script>
    <script src="/js/components.js"></script>
    <script src="/js/io.js" charset="utf-8"></script>

    <script type="text/javascript">
      $.get('/host', function(hostInfo) {
        const socket = io.connect('http://' + hostInfo.ip + ':' + hostInfo.port);
        IO(socket);
      });
    </script>

  </body>
</html>
